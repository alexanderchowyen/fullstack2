        <button class="indexbtn order btn btn-primary btn-lg box-bottom-shadow" type="submit" name="drink" value="Latte">Latte</button>
        <button class="indexbtn order btn btn-primary btn-lg box-bottom-shadow" type="submit" name="drink" value="Macchiato">Macchiato</button>
        <button class="indexbtn order btn btn-primary btn-lg box-bottom-shadow" type="submit" name="drink" value="Cold Brew">Nitro Cold Brew</button>
        <button class="indexbtn order btn btn-primary btn-lg box-bottom-shadow" type="submit" name="drink" value="House Blend">French Blend</button>
        <button class="indexbtn order btn btn-primary btn-lg box-bottom-shadow" type="submit" name="drink" value="Iced Latte">Iced Latte</button>
